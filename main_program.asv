m = 4;
n = 100;
u = rand(n,1);
cos_theta = nthroot(u,m+1);
sin_theta = sqrt(1-cos_theta.^2);
phi = 2*pi()*rand(n,1);
cos_phi = cos(phi);
sin_phi = sin(phi);

u_x = sin_theta .* cos_phi;
u_y = sin_theta .* sin_phi;
u_z = cos_theta;

p=[u_x, u_y, u_z];

plot3(u_x',u_y',u_z', 'h')

